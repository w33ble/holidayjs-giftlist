<!DOCTYPE html>
<html>
    <head>
    <script src="/js/dependencies/jquery-1.11.3.js"></script>
    <script src="/js/dependencies/angular.js"></script>
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/home.css">
    <link rel="stylesheet" href="/styles/importer.css">
    <link rel="stylesheet" href="/styles/login.css">
    <link rel="stylesheet" href="/styles/user-item.css">
    <link rel="stylesheet" href="/components/foundation/css/foundation.min.css">
    <!--STYLES END-->    
    </head>
    <body ng-app="JamboreeMod" ng-controller="JamboreeCtrl" ng-init="generateQuestion()" ng-cloak>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Math Reactor</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a href="">Level: {{user.level}}</a></li>
                    <li><a href="#">Total Points: {{user.points}}</a></li>
                    <li ng-if="user.streak != 0"><a class="streak">Streak: {{user.streak}}</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </div>  
        </nav>
        <div class="container">
            <div ng-click="runNothing()" class="question">
                <h1 >{{number1}} {{operator}} {{number2}}</h1>
            </div>
            <form>
              <div class="form-group">
                <input ng-model="userAnswer" type="text" class="form-control" id="exampleInputEmail1" placeholder="Answer">
              </div>
            <button type="button" class="btn btn-primary submitAnswer" ng-click="checkAnswer()" >Submit</button>
            <button type="button" ng-click="generateQuestion()" class="btn btn-primary next">Next question</button>
            <div class="alert" role="alert">
                <strong>{{message}}</strong> {{pointAlert}}
            </div>
        </div>
    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/components/jquery/dist/jquery.min.js"></script>
    <script src="/components/foundation/js/foundation.min.js"></script>
    <script src="/components/angular/angular.min.js"></script>
    <script src="/components/angular-route/angular-route.min.js"></script>
    <script src="/js/public/MainCtrl.js"></script>
    <script src="/js/public/home/HomeCtrl.js"></script>
    <script src="/js/public/home/HomeMod.js"></script>
    <script src="/js/public/login/LoginCtrl.js"></script>
    <script src="/js/public/login/LoginMod.js"></script>
    <script src="/js/public/signup/SignupCtrl.js"></script>
    <script src="/js/public/signup/SignupMod.js"></script>
    <!--SCRIPTS END-->
    </body>